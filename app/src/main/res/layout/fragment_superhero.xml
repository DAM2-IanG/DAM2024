<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EAEAEA">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Superhero"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dp" />

    <!-- Layout en cuadrícula para las fotos y nombres -->
    <GridLayout
        android:id="@+id/gridLayoutSuperheroes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="16dp"
        android:layout_gravity="center">

        <!-- Tarjeta 1 -->
        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:gravity="center">

            <!-- Imagen del superhéroe -->
            <ImageView
                android:id="@+id/superheroImage1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="Superhero 1"
                android:scaleType="centerCrop"/>

            <!-- Nombre del superhéroe -->
            <TextView
                android:id="@+id/superheroName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Tarjeta 2 -->
        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/superheroImage2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="Superhero 2"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/superheroName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Tarjeta 3 -->
        <LinearLayout
            android:id="@+id/layout_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/superheroImage3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="Superhero 3"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/superheroName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Tarjeta 4 -->
        <LinearLayout
            android:id="@+id/layout_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/superheroImage4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="Superhero 4"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/superheroName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp" />
        </LinearLayout>

    </GridLayout>

</LinearLayout>
